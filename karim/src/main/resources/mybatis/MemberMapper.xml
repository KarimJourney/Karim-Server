<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.karim.karim.repository.MemberRepository">

    <select id="findById" parameterType="java.lang.Long" resultType="com.karim.karim.dto.MemberDto">
        SELECT id, nickname
        FROM member
        WHERE id = #{id}
    </select>

    <select id="findAll" resultType="com.karim.karim.dto.MemberDto">
        SELECT id, nickname
        FROM member
    </select>

    <insert id="join" parameterType="com.karim.karim.dto.MemberDto">
        INSERT INTO member (id, nickname)
        VALUES (#{id}, #{nickname})
    </insert>

    <update id="modify" parameterType="com.karim.karim.dto.MemberDto">
        UPDATE member
        SET nickname = #{nickname}
        WHERE id = #{id}
    </update>

    <delete id="withdraw" parameterType="java.lang.Long">
        DELETE
        FROM member
        WHERE id = #{id}
    </delete>

</mapper>
