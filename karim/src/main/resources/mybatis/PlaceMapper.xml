<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.karim.karim.repository.PlaceRepository">

    <resultMap type="com.karim.karim.dto.PlaceDto" id="PlaceDto">
        <result column="id" property="id"/>
        <result column="plan_id" property="planId"/>
        <result column="attr_id" property="attrId"/>
        <result column="title" property="title"/>
        <result column="img1" property="img1"/>
        <result column="addr1" property="addr1"/>
        <result column="addr2" property="addr2"/>
        <result column="latitude" property="latitude"/>
        <result column="longitude" property="longitude"/>
        <result column="plan_date" property="planDate"/>
        <result column="ord" property="order"/>
    </resultMap>

    <select id="findByPlanId" parameterType="int" resultMap="PlaceDto">
        SELECT id, plan_id, no as attr_id, title, first_image1 as img1, addr1, addr2, latitude, longitude, plan_date, ord
        FROM place
        LEFT JOIN attractions ON place.attr_id = attractions.no
        WHERE plan_id = #{planId}
        ORDER BY plan_date, ord;
    </select>

    <insert id="save" parameterType="PlaceDto">
        INSERT INTO place(plan_id, attr_id, plan_date, ord)
        VALUES (#{planId}, #{attrId}, #{planDate}, #{order})
    </insert>

    <update id="modify" parameterType="PlaceDto">
        UPDATE place
        SET plan_date = #{planDate}, ord = #{order}
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="PlaceDto">
        DELETE
        FROM place
        WHERE id = #{id}
    </delete>
</mapper>
